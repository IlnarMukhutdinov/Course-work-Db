<Window x:Class="DataBase_Course_Work.FindEmployeeBySecondName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_Course_Work"
        mc:Ignorable="d"
        Title="FindEmployeeBySecondName" Height="120" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Center">
                Введите фамилию сотрудника
            </Label>
            <TextBox x:Name="Condition" 
                     BorderBrush="Black" 
                     Width="100"
                     />
            <Button Content="Найти" 
                    Width="100" 
                    Margin="10" 
                    Click="Button_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
