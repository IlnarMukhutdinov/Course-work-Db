<Window x:Class="DataBase_Course_Work.FindCaseByDecisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_Course_Work"
        mc:Ignorable="d"
        Title="Поиск дела по решению" Height="150" Width="270">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label>Введите решение судьи</Label>
            <TextBox x:Name="Condition" 
                     />
            <Button Content="Найти" 
                    Click="Button_Click"
                    />
        </StackPanel>
    </Grid>
</Window>
