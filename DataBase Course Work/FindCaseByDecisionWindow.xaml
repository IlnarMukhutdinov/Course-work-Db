<Window x:Class="DataBase_Course_Work.FindCaseByDecisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_Course_Work"
        mc:Ignorable="d"
        Title="FindCaseByDecisionWindow" Height="120" Width="270">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Center">Введите решение судьи</Label>
            <TextBox x:Name="Condition" BorderBrush="Black" Width="100"></TextBox>
            <Button Content="Найти" Width="100" Margin="10" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
