<Window x:Name="FindCaseByDate" x:Class="DataBase_Course_Work.FindCaseParams"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_Course_Work"
        mc:Ignorable="d"
        Title="FindCaseParams" Height="150" Width="280">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                <Label>Введите год</Label>
                <Label>Введите месяц</Label>
                <Label>Введите день</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox x:Name="TextBox_Year" BorderBrush="Black" Width="60" Margin="5,0,10,0"></TextBox>
                <TextBox x:Name="TextBox_Month" BorderBrush="Black" Width="60" Margin="15,0,15,0"></TextBox>
                <TextBox x:Name="TextBox_Day" BorderBrush="Black" Width="60" Margin="15,0,15,0"></TextBox>
            </StackPanel>
        </StackPanel>
        
        <Button Content="Найти" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0" Width="80" Height="30" Click="Button_Click"/>
    </Grid>
</Window>
