<Window x:Class="DataBase_Course_Work.AddNewCaseMaterial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBase_Course_Work"
        mc:Ignorable="d"
        Title="Добавить материал" Height="250" Width="300" ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary Source="Style.xaml"></ResourceDictionary>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <Label>Опишите улики</Label>
        <TextBox x:Name="TextBoxEvidence" Height="100" TextWrapping="Wrap"/>
        <Button Content="Добавить" Click="Button_Click"/>
    </StackPanel>
</Window>
